		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">
     
	<context:annotation-config />     
    
    <context:component-scan base-package="com.allianz.rws.joridmicro.utils" /> 
    <context:component-scan base-package="com.allianz.rws.joridmicro.service" />
    
    <context:component-scan base-package="com.allianz.rest.support.service" />
    
    <beans>
    	<bean name="allianzRestTemplate" class="com.allianz.rest.support.util.AllianzRestTemplate"/>
	</beans>
    
     
</beans>
